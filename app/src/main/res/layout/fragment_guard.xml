<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <TextView
        android:id="@+id/title_guard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sosCard"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        android:elevation="16dp"
        android:padding="8dp"
        app:cardBackgroundColor="@android:color/holo_blue_light"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_guard"

        />

    <TextView
        android:id="@+id/text_sos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="SOS"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@id/sosCard"
        app:layout_constraintTop_toTopOf="@id/sosCard" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/guardCard"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        android:elevation="16dp"
        android:padding="8dp"
        app:cardBackgroundColor="@android:color/holo_red_light"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sosCard" />

    <TextView
        android:id="@+id/text_guard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="GUARD"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@id/guardCard"
        app:layout_constraintTop_toTopOf="@id/guardCard" />

    <TextView
        android:id="@+id/sos_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="In case of emergency keep texting family members to cintect me!!"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/sosCard"
        app:layout_constraintEnd_toStartOf="@id/sos_img"
        app:layout_constraintStart_toStartOf="@id/sosCard"
        app:layout_constraintTop_toBottomOf="@id/text_sos"

        />

    <TextView
        android:id="@+id/guard_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Open when you are on a potentially dangerous journey!!"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/guardCard"
        app:layout_constraintEnd_toStartOf="@id/guard_img"
        app:layout_constraintStart_toStartOf="@id/guardCard"
        app:layout_constraintTop_toBottomOf="@id/text_guard"

        />

    <ImageView
        android:id="@+id/sos_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:src="@drawable/sos"
        app:layout_constraintBottom_toBottomOf="@id/sosCard"
        app:layout_constraintEnd_toEndOf="@id/sosCard"
        app:layout_constraintTop_toTopOf="@id/sosCard" />

    <ImageView
        android:id="@+id/guard_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:src="@drawable/guard"
        app:layout_constraintBottom_toBottomOf="@id/guardCard"
        app:layout_constraintEnd_toEndOf="@id/guardCard"
        app:layout_constraintTop_toTopOf="@id/guardCard" />

